{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2016",
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "typeRoots": ["./utilstypes", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts", "src/**/*.js", "package.json"],
  "exclude": [
    "node_modules",
    "build"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}